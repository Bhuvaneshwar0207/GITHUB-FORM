<body>
  <main class="container" role="main">
    <h1>Search</h1>
    <p class="lead">Type a query below — you'll see it live and can submit it (sent via Formspree).</p>

    <!-- Replace the action URL with your Formspree endpoint: https://formspree.io/f/YOUR_FORMSPREE_ID -->
    <form id="searchForm" class="search-form" method="POST" action="https://formspree.io/f/YOUR_FORMSPREE_ID">
      <label class="search-input" aria-label="Search input">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden>
          <path d="M21 21l-4.35-4.35" stroke="#94a3b8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="11" cy="11" r="6" stroke="#94a3b8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <!-- Name must be present so Formspree includes it -->
        <input id="queryInput" name="search_query" type="text" placeholder="Search anything (e.g. 'cars', 'recipes')" autocomplete="off" required />
      </label>

      <!-- Optional hidden fields for Formspree behavior -->
      <input type="hidden" name="_subject" value="New site search submission" />
      <input type="hidden" name="_language" value="en" />

      <button id="submitBtn" class="btn" type="submit">Send</button>
    </form>

    <div class="preview" aria-live="polite">
      Live preview: <strong id="livePreview">—</strong>
      <span class="small">Your typed query appears here while you type. Submitting will send the query to Formspree.</span>
    </div>

    <div id="status" class="message" role="status" aria-live="polite"></div>

    <p class="small" style="margin-top:12px">Tip: To use Formspree, create a free form at <em>formspree.io</em>, copy the form endpoint (looks like <code>https://formspree.io/f/abc123</code>) and paste it into the form <code>action</code> above.</p>
  </main>

  <script>
    // Live preview of typed letters
    const input = document.getElementById('queryInput');
    const preview = document.getElementById('livePreview');
    const form = document.getElementById('searchForm');
    const status = document.getElementById('status');
    const submitBtn = document.getElementById('submitBtn');

    input.addEventListener('input', () => {
      const text = input.value.trim();
      preview.textContent = text.length ? text : '—';
      // Optionally enable/disable submit based on length
      submitBtn.disabled = !text.length;
    });

    // Optional: AJAX submit so page doesn't navigate away (uses Formspree JSON API).
    // If you prefer the browser to navigate to Formspree's default thank-you page, remove this event listener.
    form.addEventListener('submit', async (e) => {
      // Prevent the default form navigation — we'll post via fetch to Formspree.
      e.preventDefault();

      const endpoint = form.action; // should be the https://formspree.io/f/ID
      if (!endpoint || endpoint.includes('YOUR_FORMSPREE_ID')) {
        status.innerHTML = '<span class="error">Please replace the action URL with your Formspree endpoint (see instructions above).</span>';
        return;
      }

      submitBtn.disabled = true;
      status.textContent = 'Sending...';

      const data = {
        search_query: input.value,
        _subject: form.querySelector('input[name="_subject"]')?.value || ''
      };

      try {
        // Formspree accepts application/json POST to the /f/{id} endpoint
        const res = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Accept': 'application/json', 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          status.innerHTML = '<span class="success">Thanks — your search has been submitted!</span>';
          form.reset();
          preview.textContent = '—';
        } else {
          // If the endpoint returns errors, display a friendly message
          const body = await res.json().catch(() => ({}));
          const errMsg = body?.error || 'Submission failed. Check your Formspree settings or the endpoint URL.';
          status.innerHTML = '<span class="error">' + errMsg + '</span>';
        }
      } catch (err) {
        status.innerHTML = '<span class="error">Network error: ' + (err.message || 'unknown') + '</span>';
      } finally {
        submitBtn.disabled = false;
      }
    });

    // initial state
    submitBtn.disabled = true;
  </script>
</body>
</html>
